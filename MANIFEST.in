# Include documentation
include README.md
include LICENSE
include CONTRIBUTING.md
include SETUP_GUIDE.md
include ARCHITECTURE.md
include PROJECT_SUMMARY.md
include RELEASE_NOTES.md
include UPLOAD_INSTRUCTIONS.md

# Include configuration files
include pyproject.toml
include requirements.txt
include requirements-dev.txt
include env.example
include Makefile

# Include installation scripts
include install.py
include setup_ra9.py

# Include package data
recursive-include ra9 *.yaml
recursive-include ra9 *.json
recursive-include ra9 *.txt
recursive-include ra9 *.md

# Include prompts
recursive-include ra9/Prompts *.json

# Include examples
recursive-include examples *.py

# Include tests
recursive-include tests *.py

# Exclude development files
exclude .gitignore
exclude .pre-commit-config.yaml
exclude tox.ini
exclude .coveragerc
exclude .pytest.ini

# Exclude build artifacts
exclude build/
exclude dist/
exclude *.egg-info/

# Exclude IDE files
exclude .vscode/
exclude .idea/
exclude *.sublime-*

# Exclude OS files
exclude .DS_Store
exclude Thumbs.db
exclude *.tmp
exclude *.log

# Exclude virtual environments
exclude venv/
exclude env/
exclude .venv/
exclude .env/

# Exclude frontend files (if not needed in package)
exclude ra9-frontend-main/
exclude node_modules/
exclude package*.json
exclude pnpm-lock.yaml