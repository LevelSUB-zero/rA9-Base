# RA9 Configuration Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# API KEYS (Required - set at least one)
# =============================================================================

# Google Gemini API Key (recommended)
GEMINI_API_KEY=your_gemini_api_key_here

# OpenAI API Key (alternative)
# OPENAI_API_KEY=your_openai_api_key_here

# =============================================================================
# MODEL CONFIGURATION
# =============================================================================

# Default model to use
RA9_DEFAULT_MODEL=gemini-pro

# Maximum tokens per response
RA9_MAX_TOKENS=2048

# Temperature for response generation (0.0 to 1.0)
RA9_TEMPERATURE=0.7

# =============================================================================
# MEMORY CONFIGURATION
# =============================================================================

# Enable memory system
RA9_MEMORY_ENABLED=true

# Path to memory storage directory
RA9_MEMORY_PATH=memory

# Maximum number of memory entries
RA9_MAX_MEMORY_ENTRIES=1000

# =============================================================================
# AGENT CONFIGURATION
# =============================================================================

# Maximum number of iterations per query
RA9_MAX_ITERATIONS=5

# Default processing mode (concise, detailed, creative, analytical)
RA9_DEFAULT_MODE=concise

# Enable meta-cognitive reflection
RA9_ENABLE_REFLECTION=true

# Maximum concurrent agents
RA9_MAX_CONCURRENT_AGENTS=3

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
RA9_LOG_LEVEL=INFO

# Log file path (leave empty for console only)
RA9_LOG_FILE=

# Log format string
RA9_LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================

# Request timeout in seconds
RA9_TIMEOUT_SECONDS=30

# =============================================================================
# UI CONFIGURATION
# =============================================================================

# Enable CLI interface
RA9_ENABLE_CLI=true

# Enable web interface
RA9_ENABLE_WEB_UI=false

# Web server port
RA9_WEB_PORT=8000

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Enable debug mode
RA9_DEBUG=false

# Enable development mode
RA9_DEV_MODE=false