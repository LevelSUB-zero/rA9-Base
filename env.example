# RA9 Cognitive Engine - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# REQUIRED CONFIGURATION
# =============================================================================

# Google Gemini API Key (Required for LLM functionality)
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# =============================================================================
# OPTIONAL CONFIGURATION
# =============================================================================

# Logging and Debugging
RA9_LOG_LEVEL=INFO                    # DEBUG, INFO, WARNING, ERROR
RA9_DEBUG=false                       # Enable debug mode
RA9_VERBOSE=false                     # Enable verbose output

# Memory and Storage
RA9_MEMORY_PATH=./memory              # Path to memory storage
RA9_MAX_ITERATIONS=5                  # Maximum processing iterations
RA9_MEMORY_CACHE_SIZE=1000           # Memory cache size

# Quality Control
RA9_CRITIC_MAX_ISSUES=0              # Maximum issues allowed by critic
RA9_COHERENCE_THRESHOLD=0.85         # Minimum coherence score required
RA9_CONFIDENCE_THRESHOLD=0.6         # Minimum confidence for output

# Performance and Resources
RA9_MAX_TOKENS=10000                 # Maximum tokens per request
RA9_MAX_PROCESSING_TIME=300          # Maximum processing time in seconds
RA9_PARALLEL_AGENTS=true             # Enable parallel agent processing

# Neuromodulation (Advanced)
RA9_ATTENTION_GAIN=1.0               # Attention modulation factor
RA9_EXPLORATION_FACTOR=1.0           # Creativity modulation factor
RA9_REWARD_SIGNAL=1.0                # Motivation modulation factor

# API and External Services
RA9_SEARCH_ENABLED=true              # Enable web search capabilities
RA9_WIKIPEDIA_ENABLED=true           # Enable Wikipedia integration
RA9_DUCKDUCKGO_ENABLED=true          # Enable DuckDuckGo search

# Development and Testing
RA9_TEST_MODE=false                  # Enable test mode
RA9_MOCK_LLM=false                   # Use mock LLM for testing
RA9_SAVE_TRACES=true                 # Save processing traces for analysis

# Security and Privacy
RA9_ENCRYPT_MEMORY=false             # Encrypt memory storage
RA9_LOG_SENSITIVE_DATA=false         # Log sensitive data (not recommended)
RA9_DATA_RETENTION_DAYS=30           # Days to retain data

# Monitoring and Telemetry
RA9_ENABLE_TELEMETRY=true            # Enable usage telemetry
RA9_METRICS_ENDPOINT=                # Custom metrics endpoint
RA9_HEALTH_CHECK_PORT=8080           # Health check port

# Custom Model Configuration
RA9_MODEL_TEMPERATURE=0.7            # Default model temperature
RA9_MODEL_TOP_P=0.9                  # Default model top_p
RA9_MODEL_MAX_TOKENS=2048            # Default model max tokens

# Agent-Specific Settings
RA9_LOGIC_AGENT_TEMPERATURE=0.3      # Logical agent temperature
RA9_CREATIVE_AGENT_TEMPERATURE=0.9   # Creative agent temperature
RA9_STRATEGIC_AGENT_TEMPERATURE=0.5  # Strategic agent temperature
RA9_EMOTION_AGENT_TEMPERATURE=0.7    # Emotional agent temperature

# Memory and Context
RA9_CONTEXT_WINDOW=5                 # Number of previous interactions to remember
RA9_SEMANTIC_MEMORY_ENABLED=true     # Enable semantic memory
RA9_EPISODIC_MEMORY_ENABLED=true     # Enable episodic memory

# Output and Formatting
RA9_OUTPUT_FORMAT=json               # Output format: json, text, markdown
RA9_INCLUDE_CITATIONS=true           # Include citations in output
RA9_INCLUDE_CONFIDENCE=true          # Include confidence scores
RA9_INCLUDE_REASONING=true           # Include reasoning traces

# Error Handling
RA9_RETRY_ATTEMPTS=3                 # Number of retry attempts
RA9_RETRY_DELAY=1.0                  # Delay between retries in seconds
RA9_FAIL_FAST=false                  # Fail fast on errors

# Custom Extensions
RA9_CUSTOM_AGENTS_PATH=              # Path to custom agents
RA9_CUSTOM_TOOLS_PATH=               # Path to custom tools
RA9_PLUGINS_ENABLED=false            # Enable plugin system

# =============================================================================
# NOTES
# =============================================================================

# 1. Copy this file to .env and fill in your actual values
# 2. Never commit .env file to version control
# 3. Use strong, unique API keys
# 4. Adjust settings based on your use case and resources
# 5. Check documentation for detailed explanations of each setting
